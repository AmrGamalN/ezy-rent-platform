{
  "name": "ezy-rent",
  "version": "1.0.0",
  "main": "eslint.config.js",
  "type": "module",
  "keywords": [],
  "author": "Amr Gamal",
  "license": "ISC",
  "description": "Ezy Rent apps & Microservices by Docker",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AmrGamalN"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "lint": "eslint \"apps/**/src/**/*.{ts,js}\"",
    "lint:fix": "eslint \"apps/**/src/**/*.{ts,js}\" --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "check-format": "prettier --check '**/*.{ts,js,json,md}'",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "test": "jest",
    "test:auth": "jest --config ./apps/auth-service/jest.config.ts",
    "test:car": "jest --config ./apps/car-service/jest.config.ts",
    "test:elastic": "jest --config ./apps/elastic-service/jest.config.ts",
    "test:payment": "jest --config ./apps/payment-service/jest.config.ts"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@amrogamal/shared-code": "^2.2.3",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "firebase": "^11.10.0",
    "firebase-admin": "^13.4.0",
    "helmet": "^8.1.0",
    "mongodb": "^6.17.0",
    "mongoose": "^8.16.3",
    "multer": "^2.0.1",
    "multer-s3": "^3.0.1",
    "nodemailer": "^7.0.5",
    "qrcode": "^1.5.4",
    "redis": "^5.6.0",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@elastic/elasticsearch": "^7.17.0",
    "@types/aws-sdk": "^2.7.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/multer-s3": "^3.0.3",
    "@types/nodemailer": "^6.4.17",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "axios": "^1.10.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "node-dev": "^8.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  }
}
