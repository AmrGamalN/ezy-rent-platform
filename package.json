{
  "name": "ezy-rent",
  "version": "1.0.0",
  "main": "eslint.config.js",
  "type": "module",
  "keywords": [],
  "author": "Amr Gamal",
  "license": "ISC",
  "description": "Ezy Rent Server & Microservices by Docker",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AmrGamalN"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint \"server/**/src/**/*.{ts,js}\"",
    "lint:fix": "eslint \"server/**/src/**/*.{ts,js}\" --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "test": "jest",
    "check-format": "prettier --check '**/*.{ts,js,json,md}'",
    "build": "tsc",
    "test:auth": "jest --config ./server/auth-service/jest.config.ts",
    "test:car": "jest --config ./server/car-service/jest.config.ts",
    "test:elastic": "jest --config ./server/elastic-service/jest.config.ts",
    "test:payment": "jest --config ./server/payment-service/jest.config.ts"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "jest --bail --findRelatedTests",
      "git add"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.35.1"
  },
  "dependencies": {
    "dotenv": "^17.2.0"
  }
}
