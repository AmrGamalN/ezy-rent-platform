# ===== Step 1: Build Stage =====
FROM node:20-alpine as builder
WORKDIR /src
RUN npm install -g pm2 typescript
COPY package*.json ./
RUN npm install 
COPY . .
RUN npm run build

# ===== Step 2: Production Stage =====
FROM node:20-alpine
WORKDIR /src
RUN npm install -g pm2
COPY package*.json ./
RUN npm install --only=production
COPY --from=builder /src/dist ./dist
COPY --from=builder /src/ecosystem.config.js ./ecosystem.config.js
COPY --from=builder /src/entrypoint.sh ./entrypoint.sh
EXPOSE 3000
RUN chmod +x entrypoint.sh
ENTRYPOINT ["sh", "./entrypoint.sh"]
CMD ["pm2"]
